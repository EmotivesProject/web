{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/prop-types": "off",
        "jsx-a11y/label-has-associated-control": [
            2,
            {
                "labelAttributes": [
                    "label"
                ],
                "controlComponents": [
                    "Form.Input"
                ],
                "depth": 3
            }
        ]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
